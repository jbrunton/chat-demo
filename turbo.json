{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:int": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:setup": {
      "cache": false,
      "env": [
        "AUTH0_TEST_USER1_PASSWORD",
        "AUTH0_TEST_USER2_PASSWORD",
        "E2E_BASE_URL"
      ]
    },
    "dev:teardown": {
      "cache": false
    }
  }
}
